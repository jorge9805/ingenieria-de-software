{
  "name": "colombia-raices",
  "version": "1.0.0",
  "description": "Plataforma de Turismo Comunitario para regiones marginadas de Colombia",
  "main": "main/electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "cd renderer && webpack serve --config webpack.config.js --mode development --port 3006",
    "dev:electron": "wait-on http://localhost:3006 && electron .",
    "build:renderer": "cd renderer && npx webpack --config webpack.config.js --mode production",
    "build": "npm run build:renderer && electron-builder",
    "desktop": "bash scripts/desktop-dev.sh full",
    "desktop:build": "bash scripts/desktop-dev.sh build",
    "desktop:start": "bash scripts/desktop-dev.sh start",
    "desktop:clean": "bash scripts/desktop-dev.sh clean",
    "desktop:resources": "bash scripts/desktop-dev.sh resources",
    "desktop:complete": "bash scripts/desktop-complete.sh",
    "dev:mode": "bash scripts/dev-mode.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "ports:show": "netstat -ano | findstr :300",
    "ports:clean": "bash scripts/ports.sh clean",
    "ports:kill": "bash scripts/ports.sh kill",
    "dev:clean": "npm run ports:clean && npm run dev:renderer",
    "icons:replace": "bash scripts/replace-emojis.sh",
    "build:desktop": "cd renderer && npx webpack --config webpack.config.js --mode production",
    "copy:assets": "mkdir -p renderer/dist/images && cp renderer/public/images/*.png renderer/dist/images/",
    "desktop:prepare": "npm run copy:assets && npm run build:desktop",
    "desktop:run": "npm run desktop:prepare && npm start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --format html --output-file docs/eslint-report.html"
  },
  "keywords": [
    "turismo",
    "comunitario",
    "colombia",
    "electron",
    "react",
    "tailwind"
  ],
  "author": "Colombia Ra√≠ces Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^29.5.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^12.0.0",
    "css-loader": "^7.1.2",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "eslint": "^9.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.5.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.11",
    "wait-on": "^8.0.1",
    "webpack": "^5.100.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "leaflet": "^1.9.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.6.3",
    "sqlite3": "^5.1.7"
  }
}
